<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudyReminder.Views.AboutPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Paleta de colores mejorada -->
            <Color x:Key="PrimaryColor">#6C63FF</Color>
            <Color x:Key="PrimaryDark">#5848CC</Color>
            <Color x:Key="SecondaryColor">#4CAF50</Color>
            <Color x:Key="AccentColor">#FF6B6B</Color>
            <Color x:Key="AccentLight">#FFE66D</Color>
            <Color x:Key="BackgroundColor">#F5F7FA</Color>
            <Color x:Key="SurfaceColor">#FFFFFF</Color>
            <Color x:Key="TextColor">#2C3E50</Color>
            <Color x:Key="SubtextColor">#95A5A6</Color>
            <Color x:Key="BorderColor">#E8ECF1</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView BackgroundColor="{StaticResource BackgroundColor}">
        <Grid Padding="30,60,30,30"
              RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*"
              RowSpacing="25">

            <!-- Decoración superior -->
            <BoxView Grid.Row="0"
                     Color="{StaticResource PrimaryColor}"
                     Opacity="0.1"
                     HeightRequest="150"
                     WidthRequest="150"
                     CornerRadius="75"
                     HorizontalOptions="Start"
                     VerticalOptions="Start"
                     Margin="-75,-120,0,0"/>

            <!-- Título principal -->
            <StackLayout Grid.Row="0" 
                        HorizontalOptions="Center"
                        Spacing="8"
                        Margin="0,0,0,10">
                <Label Text="StudyReminder"
                       FontSize="42"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource PrimaryColor}"/>
                <Label Text="Tu asistente de estudio personal"
                       FontSize="15"
                       HorizontalOptions="Center"
                       TextColor="{StaticResource SubtextColor}"/>
            </StackLayout>

            <!-- Logo con anillos decorativos -->
            <Grid Grid.Row="1"
                  HeightRequest="200"
                  WidthRequest="200"
                  HorizontalOptions="Center"
                  Margin="0,20,0,0">

                <!-- Anillo exterior -->
                <Frame CornerRadius="100"
                       HeightRequest="200"
                       WidthRequest="200"
                       BackgroundColor="{StaticResource PrimaryColor}"
                       Opacity="0.1"
                       HasShadow="False"
                       Padding="0"/>

                <!-- Anillo medio -->
                <Frame CornerRadius="85"
                       HeightRequest="170"
                       WidthRequest="170"
                       BackgroundColor="{StaticResource AccentColor}"
                       Opacity="0.15"
                       HasShadow="False"
                       Padding="0"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>

                <!-- Logo principal -->
                <Frame CornerRadius="70"
                       HeightRequest="140"
                       WidthRequest="140"
                       BackgroundColor="{StaticResource PrimaryColor}"
                       HasShadow="True"
                       Padding="20"
                       HorizontalOptions="Center"
                       VerticalOptions="Center">
                    <Image Source="logo.png"
                           Aspect="AspectFit"/>
                </Frame>
            </Grid>

            <!-- Características en tarjetas -->
            <Grid Grid.Row="2"
                  ColumnDefinitions="*,*,*"
                  ColumnSpacing="12"
                  Margin="0,20,0,0">

                <!-- Tarjeta 1 -->
                <Frame Grid.Column="0"
                       Padding="15,20"
                       CornerRadius="20"
                       HasShadow="True"
                       BackgroundColor="{StaticResource SurfaceColor}"
                       BorderColor="{StaticResource BorderColor}">
                    <StackLayout Spacing="8">
                        <Frame CornerRadius="20"
                               HeightRequest="40"
                               WidthRequest="40"
                               BackgroundColor="{StaticResource PrimaryColor}"
                               Opacity="0.15"
                               HasShadow="False"
                               Padding="0"
                               HorizontalOptions="Center">
                            <Label Text="📚"
                                   FontSize="22"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Text="Organiza"
                               FontSize="13"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource TextColor}"/>
                        <Label Text="tus tareas"
                               FontSize="10"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource SubtextColor}"/>
                    </StackLayout>
                </Frame>

                <!-- Tarjeta 2 -->
                <Frame Grid.Column="1"
                       Padding="15,20"
                       CornerRadius="20"
                       HasShadow="True"
                       BackgroundColor="{StaticResource SurfaceColor}"
                       BorderColor="{StaticResource BorderColor}">
                    <StackLayout Spacing="8">
                        <Frame CornerRadius="20"
                               HeightRequest="40"
                               WidthRequest="40"
                               BackgroundColor="{StaticResource SecondaryColor}"
                               Opacity="0.15"
                               HasShadow="False"
                               Padding="0"
                               HorizontalOptions="Center">
                            <Label Text="⏰"
                                   FontSize="22"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Text="Recuerda"
                               FontSize="13"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource TextColor}"/>
                        <Label Text="a tiempo"
                               FontSize="10"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource SubtextColor}"/>
                    </StackLayout>
                </Frame>

                <!-- Tarjeta 3 -->
                <Frame Grid.Column="2"
                       Padding="15,20"
                       CornerRadius="20"
                       HasShadow="True"
                       BackgroundColor="{StaticResource SurfaceColor}"
                       BorderColor="{StaticResource BorderColor}">
                    <StackLayout Spacing="8">
                        <Frame CornerRadius="20"
                               HeightRequest="40"
                               WidthRequest="40"
                               BackgroundColor="{StaticResource AccentColor}"
                               Opacity="0.30"
                               HasShadow="False"
                               Padding="0"
                               HorizontalOptions="Center">
                            <Label Text="🎯"
                                   FontSize="22"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Text="Alcanza"
                               FontSize="13"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource TextColor}"/>
                        <Label Text="tus metas"
                               FontSize="10"
                               HorizontalOptions="Center"
                               TextColor="{StaticResource SubtextColor}"/>
                    </StackLayout>
                </Frame>
            </Grid>

            <!-- Estadísticas o beneficios -->


            
