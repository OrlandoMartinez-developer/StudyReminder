            <!-- Botón principal -->
            <Button Grid.Row="4"
                    Text="COMENZAR AHORA"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="{StaticResource PrimaryColor}"
                    CornerRadius="28"
                    HeightRequest="56"
                    Margin="0,25,0,0"/>

            <!-- Botón secundario -->
            <Frame Grid.Row="5"
                   Padding="0"
                   CornerRadius="28"
                   HasShadow="False"
                   BackgroundColor="Transparent"
                   BorderColor="{StaticResource PrimaryColor}"
                   HeightRequest="56"
                   Margin="0,10,0,0">
                <Button Text="YA TENGO CUENTA"
                        FontSize="16"
                        FontAttributes="Bold"
                        TextColor="{StaticResource PrimaryColor}"
                        BackgroundColor="Transparent"/>
            </Frame> 

            <!-- Footer -->
            <StackLayout Grid.Row="6"
                        Spacing="5"
                        VerticalOptions="End"
                        Margin="0,30,0,10">
                <Label Text="Versión 1.0.0"
                       FontSize="12"
                       TextColor="{StaticResource SubtextColor}"
                       HorizontalOptions="Center"/>
                <Label Text="Hecho con ❤️ para estudiantes"
                       FontSize="11"
                       TextColor="{StaticResource SubtextColor}"
                       HorizontalOptions="Center"/>
            </StackLayout>

            <!-- Decoración inferior -->
            <BoxView Grid.Row="6"
                     Color="{StaticResource AccentLight}"
                     Opacity="0.1"
                     HeightRequest="120"
                     WidthRequest="120"
                     CornerRadius="60"
                     HorizontalOptions="End"
                     VerticalOptions="End"
                     Margin="0,0,-60,60"/>
        </Grid>
    </ScrollView>
</ContentPage>